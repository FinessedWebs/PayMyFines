<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:color="@color/offWhite"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Screen title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.05"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:text="Infringement Details"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- MAIN CARD -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0B1120"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Top row: Notice + Status chip -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textNoticeNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:text="Notice: 90/00181/803/001255"
                        android:textColor="#E5E7EB"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="#1F2937"
                        android:backgroundTintMode="src_in"
                        android:clipToOutline="true"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:letterSpacing="0.08"
                        android:paddingLeft="10dp"
                        android:paddingTop="4dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="4dp"
                        android:text="Summons"
                        android:textAllCaps="true"
                        android:textColor="#F97373"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Big amount hero -->
                <TextView
                    android:id="@+id/textAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="4dp"
                    android:text="R200.00"
                    android:textColor="#22C55E"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:text="Outstanding amount"
                    android:textColor="#9CA3AF"
                    android:textSize="12sp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.8"
                    android:background="#111827" />

                <!-- 3-column summary: Location / Vehicle / Court -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="12dp"
                    android:weightSum="3">

                    <!-- Location -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.08"
                            android:text="Location"
                            android:textAllCaps="true"
                            android:textColor="#6B7280"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/textLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:text="CAPE TOWN"
                            android:textColor="#E5E7EB"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <!-- Vehicle -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.08"
                            android:text="Vehicle"
                            android:textAllCaps="true"
                            android:textColor="#6B7280"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/textVehicle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:text="CAA456514"
                            android:textColor="#E5E7EB"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <!-- Court date -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.08"
                            android:text="Court Date"
                            android:textAllCaps="true"
                            android:textColor="#6B7280"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/textCourtDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:text="2025-04-30 08:30"
                            android:textColor="#E5E7EB"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.8"
                    android:background="#111827" />

                <!-- Charges block -->
                <TextView
                    android:id="@+id/textChargesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="4dp"
                    android:text="Charge(s)"
                    android:textColor="#E5E7EB"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textCharges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:paddingBottom="8dp"
                    android:text="SECT. 59(4)(B) ACT 93/1996 ..."
                    android:textColor="#9CA3AF"
                    android:textSize="13sp" />

                <!-- Evidence Images -->
                <TextView
                    android:id="@+id/textEvidenceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="6dp"
                    android:text="Evidence"
                    android:textColor="#E5E7EB"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerEvidenceImages"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:visibility="gone"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/textNoEvidence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Evidence images are only available for unpaid fines."
                    android:textColor="#9CA3AF"
                    android:textSize="13sp"
                    android:visibility="gone"
                    android:paddingBottom="8dp" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ACTION AREA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#0A4EFF"
                android:text="Add to Cart"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:cornerRadius="999dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDownload"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Download PDF"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="14sp"
                app:cornerRadius="999dp"
                app:strokeColor="#4B5563" />
        </LinearLayout>

        <!-- Helper text -->
        <TextView
            android:id="@+id/textHelper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:text="Downloaded files will appear in your device's Downloads folder."
            android:textColor="#9CA3AF"
            android:textSize="12sp" />

    </LinearLayout>

</ScrollView>
