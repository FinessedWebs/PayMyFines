<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor">



    <!-- PAGE CONTENT UNDER TOOLBAR -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:clipChildren="false">

        <!-- GLOBAL PROGRESS (hidden by default) -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- TOP CONTROLS: DROPDOWN (40%) + ICONS (remaining) -->
        <!-- TOP CONTROLS ROW (replace your existing topControlsRow block) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topControlsRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- MODE TOGGLE (left area) -->
            <LinearLayout
                android:id="@+id/modeToggleRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/topActionsGroup"
                app:layout_constraintHorizontal_weight="4">

                <ImageButton
                    android:id="@+id/btnModeIndividual"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Individual Mode"
                    android:padding="6dp"
                    android:src="@drawable/ic_person"
                    app:tint="@android:color/white" />

                <ImageButton
                    android:id="@+id/btnModeFamily"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Family Mode"
                    android:padding="6dp"
                    android:src="@drawable/ic_family_group"
                    app:tint="@android:color/darker_gray" />
            </LinearLayout>

            <!-- ICON ACTIONS (right area) -->
            <LinearLayout
                android:id="@+id/topActionsGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|center_vertical"
                app:layout_constraintTop_toTopOf="@id/modeToggleRow"
                app:layout_constraintBottom_toBottomOf="@id/modeToggleRow"
                app:layout_constraintStart_toEndOf="@id/modeToggleRow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="6">

                <ImageButton
                    android:id="@+id/btnFilter"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Filter"
                    app:srcCompat="@drawable/ic_filter_list"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/textFilterBadge"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/bg_badge_red"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/btnSearch"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Search"
                    app:srcCompat="@drawable/ic_search"
                    app:tint="@android:color/white" />

               <!-- <FrameLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp">

                    <ImageButton
                        android:id="@+id/btnCart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Cart"
                        app:srcCompat="@drawable/ic_cart"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/textCartBadge"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="end|top"
                        android:background="@drawable/bg_badge_red"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                        android:visibility="gone"/>
                </FrameLayout>-->
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="120dp"
            android:hint="Search fines"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/homeMainContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:startIconDrawable="@drawable/ic_search"
            app:startIconTint="@color/primaryColor">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionSearch"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- MAIN CONTAINER WITH ROUNDED TOP CORNERS -->
        <FrameLayout
            android:id="@+id/homeMainContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_home_container"
            app:layout_constraintTop_toBottomOf="@id/topControlsRow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/homeMainContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="20dp">

                <!-- SEGMENTED TOGGLE -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/segmentCard"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="@android:color/white"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/segmentInactive">

                    <!-- SEGMENTED TOGGLE -->
                    <FrameLayout
                        android:id="@+id/togglePaidState"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@drawable/bg_segment_frame"
                        android:padding="5dp"
                        >

                        <!-- Sliding pill -->
                        <View
                            android:id="@+id/viewSlidingPill"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:background="@drawable/bg_segment_pill" />

                        <!-- Horizontal buttons (transparent) -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/btnUnpaid"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="UNPAID FINES"
                                android:textColor="@color/segmentActive"
                                android:textSize="12sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/btnPaid"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="PAID FINES"
                                android:textColor="@color/segmentInactive"
                                android:textSize="12sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                       <!-- <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                            android:id="@+id/fabMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Actions"
                            android:layout_margin="24dp"
                            android:icon="@drawable/ic_add"
                            app:iconTint="@android:color/white"
                            android:textColor="@android:color/white"
                            android:backgroundTint="@color/primaryColor"
                            app:layout_anchorGravity="bottom|end"
                            android:visibility="visible"/>

                        &lt;!&ndash;Expandable Floating Action Button (FAB Menu)&ndash;&gt;
                        <LinearLayout
                            android:id="@+id/fabMenu"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="24dp"
                            android:layout_marginBottom="100dp"
                            android:gravity="end"
                            android:visibility="gone">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fabDeleteMember"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:contentDescription="Delete Member"
                                app:srcCompat="@drawable/ic_delete"
                                android:backgroundTint="@color/errorRed"
                                android:tint="@android:color/white"/>

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="12dp" />

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fabAddMember"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:contentDescription="Add Member"
                                app:srcCompat="@drawable/ic_add_person"
                                android:backgroundTint="@color/primaryColor"
                                android:tint="@android:color/white"/>

                        </LinearLayout>-->


                    </FrameLayout>





                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/familyHeaderRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="4dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textUsersFound"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0 Users Found"
                        android:textSize="13sp"
                        android:textColor="#666" />


                        <!--the Expand all button-->
                  <!--  <TextView
                        android:id="@+id/textExpandAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#005BBB"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:visibility="gone" />-->
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerFamilyUsers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"/>



                <!-- PROFILE BAR (YELLOW) WITH SUMMARY ATTACHED AT BOTTOM -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardProfileInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/primaryLightColor"
                    android:clipToPadding="false"
                    android:clipChildren="false">

                    <!-- REMOVE horizontal padding here so cardSummary can touch edges -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="0dp"
                        android:clipToPadding="false"
                        android:clipChildren="false">

                        <!-- TOP PROFILE SECTION (has padding inside) -->
                        <LinearLayout
                            android:id="@+id/profileInfoRow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/imageHomeProfileAvatar"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:scaleType="centerCrop"
                                android:padding="0dp"
                                android:background="@color/offWhite"
                                app:shapeAppearanceOverlay="@style/CircleImage"
                                android:src="@drawable/ic_person"/>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingStart="12dp">

                                <TextView
                                    android:id="@+id/textProfileName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="User Name"
                                    android:textSize="18sp"
                                    android:textColor="@color/accentColor"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/textProfileEmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="email@example.com"
                                    android:textSize="13sp"
                                    android:textColor="@color/gray"/>

                                <TextView
                                    android:id="@+id/textProfileId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ID: 0000000000000"
                                    android:textSize="13sp"
                                    android:textColor="@color/gray"/>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/imageMessage"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_message"
                                app:tint="@android:color/white"/>
                        </LinearLayout>

                        <!-- SUMMARY SHOULD TOUCH FULL WIDTH -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardSummary"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="0dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="4dp"
                            android:backgroundTint="@android:color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:clipToPadding="false"
                                android:clipChildren="false">

                                <!-- Summary Header -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="16dp"
                                    android:paddingTop="12dp"
                                    android:paddingBottom="8dp"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/textTopFineCount"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="0 unpaid fines found"
                                        android:textSize="13sp"
                                        android:textColor="@color/segmentInactive"/>

                                    <!--<CheckBox
                                        android:id="@+id/checkTopSelectAll"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Select all"
                                        android:textSize="13sp" />-->
                                </LinearLayout>

                                <!-- Fines List -->
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerFines"
                                    android:background="@android:color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingBottom="12dp"
                                    android:nestedScrollingEnabled="false"
                                    android:clipToPadding="false"
                                    android:clipChildren="false"
                                    />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>





            </LinearLayout>

        </FrameLayout>
        <!-- Floating Action Button Menu -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Menu"
            android:src="@drawable/svg_pmf_logo_white"
            app:tint="@null"
            app:backgroundTint="@color/primaryColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="24dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Add Family Member"
            app:srcCompat="@drawable/ic_add_person"
            app:tint="@android:color/white"
            app:backgroundTint="@color/state_new"
            app:layout_constraintBottom_toTopOf="@id/fabMain"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="24dp"
            android:alpha="0"
            android:visibility="gone" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabDeleteMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Delete Member"
            app:srcCompat="@drawable/ic_delete"
            app:tint="@android:color/white"
            app:backgroundTint="@color/errorRed"
            app:layout_constraintBottom_toTopOf="@id/fabAddMember"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="24dp"
            android:alpha="0"
            android:visibility="gone" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
