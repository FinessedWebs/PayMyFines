<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background2">

    <!-- TOP BRAND AREA (YELLOW) -->
    <LinearLayout
        android:id="@+id/topBrandArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loginContainer"
        app:layout_constraintHeight_percent="0.3">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/pmf_yellow_logo"
            android:contentDescription="@string/app_name"
            android:transitionName="logoTransition"/>

        <ImageView
            android:id="@+id/PayMyFines"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/paymyfines_text_logo_white_back_remove"
            android:contentDescription="@string/app_name"/>
    </LinearLayout>

    <!-- WHITE LOGIN CONTAINER -->
    <ScrollView
        android:id="@+id/loginContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@drawable/bg_login_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your Email and Password to view your fines"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:layout_marginBottom="28dp"/>

            <!-- EMAIL -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailLayout"
                style="@style/Widget.Material3.TextInputLayout.FilledBox"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/primaryColor"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- PASSWORD -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordLayout"
                style="@style/Widget.Material3.TextInputLayout.FilledBox"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/primaryColor"
                app:endIconMode="password_toggle"
                android:layout_marginTop="16dp"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="@color/accentColor"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"/>

            <!-- LOGIN BUTTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/onPrimaryColor"
                android:backgroundTint="@color/primaryColor"
                android:layout_marginTop="28dp"
                app:cornerRadius="18dp"/>

            <!-- REACTIVATE (HIDDEN BY DEFAULT) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReactivate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reactivate Account"
                android:backgroundTint="@color/red"
                android:layout_marginTop="12dp"
                android:visibility="gone"/>

            <!-- SIGNUP -->
            <TextView
                android:id="@+id/textGoToSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donâ€™t have an account? Sign up"
                android:textColor="@color/accentColor"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
