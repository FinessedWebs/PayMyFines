<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/offWhite">

    <!-- Top bar -->
    <!--<com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/paymentToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primaryColor"
        android:elevation="4dp"
        android:title="Card Payment"
        android:titleTextColor="@color/black"
        app:navigationIcon="@drawable/ic_arrow_back" />-->

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Hero / info card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/primaryLightColor"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Small shield / lock accent circle -->
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_payment_icon_circle"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lock"
                        app:tint="@color/segmentActive" />
                </LinearLayout>

                <!-- Texts -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <!-- Re-using your existing ID for info text -->
                    <TextView
                        android:id="@+id/textPaymentInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You’ll be redirected to our secure payment partner to complete your card payment."
                        android:textSize="14sp"
                        android:textColor="@color/textColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Secured • Card &amp; online banking"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- WebView card with overlay progress -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            android:backgroundTint="@android:color/white">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Your existing WebView ID -->
                <WebView
                    android:id="@+id/webViewPayment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Centered loader (existing ID) -->
                <ProgressBar
                    android:id="@+id/paymentProgress"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:visibility="visible" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Bottom sticky cancel button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel Payment"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:paddingVertical="10dp"
            app:cornerRadius="999dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/errorRed"
            android:textColor="@color/errorRed"
            android:backgroundTint="@android:color/white" />
    </LinearLayout>

</LinearLayout>
