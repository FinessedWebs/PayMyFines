<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/offWhite"
    android:backgroundTint="@color/offWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Left accent stripe -->
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/segmentActive" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Top row: tag + amount badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Tiny category pill -->
                <TextView
                    android:id="@+id/textFineTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fine"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/bg_fine_tag" />

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Amount badge (uses your existing ID) -->
                <TextView
                    android:id="@+id/textCartAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R0.00"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/segmentActive"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/bg_amount_badge" />
            </LinearLayout>

            <!-- Main description -->
            <TextView
                android:id="@+id/textCartDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Description"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/textColor" />

            <!-- Optional subtext (e.g. notice number) -->
            <TextView
                android:id="@+id/textCartMeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Notice â€¢ Tap for more details"
                android:textSize="11sp"
                android:textColor="@color/gray" />

            <!-- Bottom row: maybe later you can add extra actions -->
        </LinearLayout>

        <!-- Remove button column -->
        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnRemoveFromCart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                app:tint="@color/errorRed"
                android:contentDescription="Remove from cart" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
