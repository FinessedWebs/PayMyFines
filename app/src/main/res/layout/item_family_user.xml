        <!-- HEADER -->
        <LinearLayout
            android:id="@+id/userHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D3D3D3"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:clipChildren="false">




            <TextView
                android:id="@+id/textFamilyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textFamilyIdNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID Number"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/textHasAccountBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Has Account"
                android:textSize="12sp"
                android:textColor="@color/accentColor"
                android:padding="4dp"
                android:visibility="gone" />

            <!-- expand arrow -->
            <ImageView
                android:id="@+id/iconExpandArrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="6dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_expand"
                app:tint="@android:color/white" />

        </LinearLayout>

        <!-- EXPANDABLE CONTENT -->
        <LinearLayout
            android:id="@+id/expandContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@android:color/white"
            android:padding="8dp"
            android:clipToPadding="false"
            android:clipChildren="false">

            <TextView
                android:id="@+id/textNoFines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No fines for this user"
                android:textColor="#999999"
                android:textSize="13sp"
                android:gravity="center"
                android:padding="12dp"
                android:visibility="gone" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerUserFines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
