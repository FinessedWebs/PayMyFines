<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PayMyFinesstep" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSecondary">@color/accentColor</item>
        <item name="android:statusBarColor">@color/primaryColor</item>
        <item name="textInputStyle">@style/CustomOutlinedTextInput</item>

    </style>

    <style name="CustomOutlinedTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <!-- Default background (not transparent) -->
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>

        <!-- REMOVE dimming if you want -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <!-- Default white panel -->
        <item name="android:background">?attr/colorSurface</item>
    </style>


</resources>